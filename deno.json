{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"fmt": {
		"files": {
			"include": [
				"components/",
				"islands/",
				"routes/",
				"dev.ts",
				"main.ts"
			],
			"exclude": []
		},
		"options": {
			"indentWidth": 4,
			"lineWidth": 80,
			"proseWrap": "preserve",
			"singleQuote": true,
			"useTabs": true
		}
	},
	"lint": {
		"files": {
			"include": [
				"components/",
				"islands/",
				"routes/",
				"dev.ts",
				"main.ts"
			],
			"exclude": []
		},
		"rules": {
			"exclude": [
				"no-unused-vars"
			],
			"include": [
				"ban-untagged-todo"
			],
			"tags": [
				"recommended"
			]
		}
	},
	"importMap": "./import_map.json",
	"tasks": {
		"start": "deno run -A --watch=static/,routes/ dev.ts"
	}
}
